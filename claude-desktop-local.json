{
  "mcpServers": {
    "jira": {
      "command": "uv",
      "args": ["run", "python", "server.py"],
      "cwd": "/path/to/jira-mcp-server-standalone",
      "env": {
        "JIRA_URL": "https://your-company.atlassian.net",
        "JIRA_USERNAME": "your-email@company.com",
        "JIRA_API_TOKEN": "your-api-token"
      }
    }
  }
}